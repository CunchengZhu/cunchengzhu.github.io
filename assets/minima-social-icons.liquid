<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
{% comment %}
  Render all custom SVG files located in /assets/icons/ directory.
{% endcomment %}
{% for entry in site.minima.social_links %}
  {%- assign symbol_id = entry.platform -%}
  {%- unless symbol_id == "rss" -%}
    <symbol id="{{ symbol_id }}" viewBox="0 0 16 16">
      {% capture icon_path %}
      {% include_relative /social-icons/{{ symbol_id }}.svg %}
      {% endcapture %}
      {{ icon_path | strip_newlines }}
    </symbol>
  {% endunless %}
{% endfor %}
  {%- include svg_symbol.html key = "rss" -%}
</svg>
